generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model logs {
  id         Int         @id @default(autoincrement())
  task_id    Int
  status     logs_status
  message    String?     @db.Text
  created_at DateTime?   @default(now()) @db.Timestamp(0)
  tasks      tasks       @relation(fields: [task_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "logs_ibfk_1")

  @@index([task_id], map: "task_id")
}

model tasks {
  id          Int           @id @default(autoincrement())
  source      String        @db.VarChar(255)
  destination String        @db.VarChar(255)
  schedule    String        @db.VarChar(255)
  status      tasks_status? @default(pending)
  created_at  DateTime?     @default(now()) @db.Timestamp(0)
  user_id     Int
  logs        logs[]
  users       users         @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "tasks_ibfk_1")

  @@index([user_id], map: "user_id")
}

model users {
  id         Int       @id @default(autoincrement())
  email      String    @unique(map: "email") @db.VarChar(255)
  password   String    @db.VarChar(255)
  created_at DateTime? @default(now()) @db.Timestamp(0)
  tasks      tasks[]
}

enum logs_status {
  success
  error
}

enum tasks_status {
  pending
  in_progress
  completed
  failed
}
